skynetroot = "./skynet/"
thread = 8
logger = nil
logpath = "."
harbor = 0
start = "main"	-- main script
bootstrap = "snlua bootstrap"	-- The service for bootstrap

cluster = "./config/clustername.lua"

log_dirname = "log"
log_basename = "db"

dbservice = "./db_server/?.lua;" ..
			   "./common/?.lua"

luaservice = skynetroot .. "service/?.lua;" .. dbservice
-- snax standard services
snax = dbservice

lualoader = skynetroot .. "lualib/loader.lua"
preload = "./global/preload.lua"	-- run preload.lua before every lua service run

cpath = skynetroot .. "cservice/?.so"

lua_path = skynetroot .. "lualib/?.lua;" ..
		   "./lualib/?.lua;" ..
		   "./global/?.lua;" ..
		   "./db_server/?.lua"

lua_cpath = skynetroot .. "luaclib/?.so;" .. "./luaclib/?.so"

--daemon = "./db.pid"

mysql_maxconn = 10
mysql_host = "127.0.0.1"
mysql_port = 3306
mysql_db = "gamedb"
mysql_user = "root"
mysql_pwd = "123456"

redis_host = "127.0.0.1"
redis_port = 6379
redis_db = 0

--debug_port = 7001 - 1000

backupToMysqlTime = 10 --备份数据到数据库的时间单位（秒）
